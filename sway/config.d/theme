# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

#SwayFX settings
corner_radius 10
blur_radius 5
blur_passes 1
blur enable

layer_effects "waybar" {
  blur enable;
  blur radius 3;
  blur_passes 1;
}

# Set inner/outer gaps
gaps inner 4
gaps outer 4

# Hide titlebar on windows:
default_border pixel 1

# Default Font
font pango:Noto Sans Regular 10

# Thin borders:

# Set wallpaper:
exec output * bg /home/hrvoje-kajba/bay.JPG fill

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

# class                 border  bground text    indicator child_border
client.focused          #A7C080 #A7C080 #F8F8F2 #A7C080   #A7C080
client.focused_inactive #3C4841 #3C4841 #F8F8F2 #3C4841   #3C4841
client.unfocused        #1E2326 #1E2326 #BFBFBF #1E2326   #1E2326
client.urgent           #E67E80 #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background       #F8F8F2

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
}
